
.content {
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.sign {
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 50rpx;
}
.text-area {
	display: flex;
	justify-content: center;
}
.title {
	font-size: 36rpx;
	color: #8f8f94;
	border: 2rpx solid #1c1fcc;
	padding: 20rpx 40rpx;
}
.base64{
	white-space:normal;
	word-break:break-all;
	word-wrap:break-word;
	padding: 30rpx;
	flex: 1;
	overflow: auto;
}

